<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="20dp"
    android:orientation = "vertical"
    tools:context="com.example.bruinswipeswap.Home"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <TextView
            android:id="@+id/home_current_update"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="#a3a3a3"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginBottom="5dp">

        <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_action_person"/>

        <TextView
            android:id="@+id/name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_full_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="10dp"
    	android:orientation="horizontal" >

        <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_action_call"
        	android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_number"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>
    
    <!--  placeholder for now, will need to display dynamically (listview?) based on user
          clicking "x" icon will erase the request/offer -->    
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
         
		<TextView
            android:id="@+id/test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#555555"
            android:text="Requesting 3 swipe(s) at 4:00 PM"
            android:textSize="15sp" /> 

    	<ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_action_remove"
        	android:scaleX="0.65"
        	android:scaleY="0.65" />
    </LinearLayout>
    

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
        
		<TextView
            android:id="@+id/test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:text="Offering 1 swipe(s) at 5:00 PM"
            android:textSize="15sp" 
            android:layout_gravity="center_vertical"/> 
        <ImageView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_action_remove"
        	android:scaleX="0.65"
        	android:scaleY="0.65" />
    </LinearLayout>
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
             
        <TextView
            android:id="@+id/test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:layout_gravity="center_vertical"
            android:text="Requesting 1 swipe(s) at 3:00 pm - 5:32 pm"
            android:textSize="15sp" /> 
	
	<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_remove"
        android:scaleX="0.65"
        android:scaleY="0.65" />
    
    </LinearLayout>
    <!--  end placeholder -->
    
    <!--  TODO: disable button and display "No Match" if no matches -->
    <Button
        android:id="@+id/view_match_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_button"
        style="@style/ButtonText"
        android:text="@string/view_match_button" />

    <Button
        android:id="@+id/offer_swipes_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_button"
        android:text="@string/offer_swipes" />

    <Button
        android:id="@+id/request_swipes_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_button"
        android:text="@string/request_swipes" />

</LinearLayout>